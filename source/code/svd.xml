<diagram dimensions="(510,250)" margins="7">
  <definition>A=[[1,2],[2,1]]</definition>
  <definition>u1=normalize([1,1])</definition>
  <definition>u2=normalize([-1,1])</definition>
  <definition>v1=normalize(A@u1)</definition>
  <definition>v2=normalize(A@u2)</definition>
  <coordinates bbox="(-4,-4,4,4)" destination="(0,0,250,250)">
    <grid-axes decorations="no"/>
    <circle center="(0,0)" radius="1" stroke="blue"/>
    <vector v="u1" thickness="2"/>
    <vector v="u2" thickness="2"/>
  </coordinates>

  <coordinates bbox="(-4,-4,4,4)" destination="(260,0,510,250)">
    <grid-axes decorations="no"/>
    <polygon points="A@(cos(2*k*pi/100), sin(2*k*pi/100))"
	     parameter="k=0..100" stroke="blue" closed="yes"/>
    <vector v="A@u1" stroke="red" thickness="2"/>
    <vector v="A@u2" stroke="red" thickness="2"/>
  </coordinates>
</diagram>
    
      
